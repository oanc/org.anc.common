<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>parent-pom</artifactId>
		<groupId>org.anc.maven</groupId>
		<version>1.0.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.anc</groupId>
	<artifactId>common</artifactId>
	<version>2.6.0</version>
	<packaging>bundle</packaging>
	<name>ANC Common Utilities</name>
	<url>http://www.anc.org/</url>
	<description>Common utility classes used in most ANC projects.</description>
	<!-- Added a comment to test svn ci -->
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<release.type>release</release.type>
	</properties>
	<issueManagement>
		<system>Trac</system>
		<url>http://www.anc.org/wiki</url>
	</issueManagement>
	<licenses>
		<license>
			<name>Apache 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
		</license>
	</licenses>
	<ciManagement>
		<system>Hudson</system>
		<url>http://www.anc.org:8080/hudson/job/anc-common/</url>
	</ciManagement>
	<developers>
		<developer>
			<id>ksuderman</id>
			<name>Keith Suderman</name>
			<email>suderman@anc.org</email>
			<organization>American National Corpus</organization>
			<organizationUrl>http://www.anc.org/</organizationUrl>
			<roles>
				<role>Project Manager</role>
			</roles>
		</developer>
	</developers>
	<scm>
		<connection>scm:svn:http://www.anc.org/svn/common</connection>
		<developerConnection>scm:svn:https://www.anc.org/svn/common</developerConnection>
		<url>http://www.anc.org/svn/common</url>
	</scm>
	<organization>
		<name>The American National Corpus</name>
		<url>http://www.anc.org</url>
	</organization>
	<build>
		<finalName>${versioned.name}</finalName>
	<!--  
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-webdav</artifactId>
				<version>1.0-beta-2</version>
			</extension>
		</extensions>
	-->
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.1.0</version>
				<extensions>true</extensions>
				<configuration>
					<manifestLocation>META-INF</manifestLocation>
					<instructions>
						<Bundle-SymbolicName>${base.name}</Bundle-SymbolicName>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Bundle-Description>ANC Common Utilities</Bundle-Description>
						<Bundle-Activator>org.anc.common.Activator</Bundle-Activator>
						<Export-Package>org.anc,org.anc.dom,org.anc.io,org.anc.masc,org.anc.resource,org.anc.ssl,org.anc.threads,org.anc.ui,org.anc.util,org.anc.xml</Export-Package>
						<!--  <Private-Package>org.anc.dom,org.anc.ui</Private-Package> -->
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
			<version>2.9.1</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.4</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>1.4.0</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<distributionManagement>
		<site>
			<id>anc-scp</id>
			<url>scp://suderman@anc.org:/var/www/anc/projects/anc-common</url>
		</site>
	</distributionManagement>
</project>
